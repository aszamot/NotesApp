<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.atk.notes.presentation.utils.views.EmptyView
                android:id="@+id/empty_archive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:icon="@drawable/ic_archive"
                app:text="@string/empty_archive_description" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="10"
                tools:listitem="@layout/item_note" />

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/archive_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:menu="@menu/menu_search"
            app:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="?colorOnPrimary"
            app:title="@string/title_archive" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/archive_action_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:visibility="gone"
            app:menu="@menu/menu_archive_list_selected_options"
            app:navigationIcon="@drawable/ic_close"
            app:navigationIconTint="?colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.search.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/search_notes"
        app:backgroundTint="?android:colorBackground"
        app:layout_anchor="@id/appBarLayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.atk.notes.presentation.utils.views.EmptyView
                android:id="@+id/empty_view_search_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:icon="@drawable/ic_search"
                app:text="@string/notes_empty_search_description" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_search_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="10"
                tools:listitem="@layout/item_note" />

        </FrameLayout>

    </com.google.android.material.search.SearchView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
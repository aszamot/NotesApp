<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/handler"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_menu_item"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/title_notes"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_note"
        app:drawableTint="?colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/handler"/>

    <TextView
        android:id="@+id/tv_archive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ripple_menu_item"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/title_archive"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_archive"
        app:drawableTint="?colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_notes" />

    <TextView
        android:id="@+id/tv_trash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ripple_menu_item"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/title_trash"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_delete"
        app:drawableTint="?colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_archive" />

</androidx.constraintlayout.widget.ConstraintLayout>